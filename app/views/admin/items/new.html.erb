<div class="h3 pb-2 mb-4 text-success border-bottom border-success">
  商品新規登録
</div>
<div class="container">
  <div class="row g-3">
    <div class ="col-md-6 offset-md-3">
        <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

        <div>
          <%= f.label '商品画像' %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label '商品名' %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label '商品説明' %>
          <%= f.text_area :introduction %>
        </div>
        <div>
          <%= f.label 'ジャンル' %>
            <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), inclide_blank: '選択してください' %>
        </div>
        <div>
          <%= f.label '税抜価格' %>
          <%= f.text_field :price %>円
        </div>
        <div>
          <%= f.label '販売ステータス' %>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
        <%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>

      <% end %>
    </div>
  </div>
</div>

