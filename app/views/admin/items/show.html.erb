<h4>商品詳細</h4>
<div>
  <%= image_tag @item.image, size:'300x300' %>
</div>
<div>
  <label>商品名</label>
  <%= @item.name %>
</div>
<div>
  <label>商品説明</label>
  <%= @item.introduction %>
</div>
<div>
  <label>ジャンル名</label>
  <%= @genre.name %>
</div>
<div>
  <label>税込価格</label>
  <%= @item.price %>
</div>
<div>
  <label>販売ステータス</label>
  <% if @item.is_active %>
    <%=  "販売中" %>
  <% else %>
    <%= "販売停止中" %>
  <% end %>
</div>