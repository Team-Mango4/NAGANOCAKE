<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.price %>円</td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal %>円</td>
      <td>
        <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f|%>
          <%= f.select :making_status, OrderDetail.making_statuses.keys.to_a %>
          <%= f.submit '更新' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

