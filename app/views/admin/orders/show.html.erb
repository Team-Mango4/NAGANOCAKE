<h4>注文履歴詳細</h4>
<div>
  <label>購入者</label>
  <%= @order.customer.first_name + @order.customer.last_name %>
</div>

<div>
  <label>注文日</label>
  <%= @order.updated_at %>
</div>

<div>
  <label>配送先</label>
  <%= @order.ship_address %>
</div>

<div>
  <label>支払い方法</label>
  <%= @order.payment_method %>
</div>

<div>
  <label>注文ステータス</label>
    <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f|%>
      <%= f.select :status, Order.statuses.keys.to_a %>
      <%= f.submit '更新' %>
    <% end %>
</div>

<div>
  <%= render 'admin/order_details/show' %>
</div>


<div>
  <label>商品合計</label>
    <% @order_details.each do |order_detail| %>
      <% @subtotal += order_detail.subtotal %>
    <% end %>
    <%= @subtotal %>円
</div>
<div>
  <label>送料</label>
    <%= @order.shipping_cost %>円
</div>
<div>
  <label>請求金額合計</label>
    <%= @order.total_payment %>円
</div>