<div class="h3 pb-2 mb-4 text-success border-bottom border-success">
  管理者ログイン
</div>
<div class='container'>
  <div class='row g-3'>
    <div class='col-md-6 offset-md-3'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email,"メールアドレス",class: "h5 text-success" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control border-success' %>
      </div>
    
      <div class="field">
        <%= f.label :password,"パスワード",class: "h5 text-success" %><br />
        <%= f.password_field :password, autocomplete: "current-password" ,class: 'form-control border-success'%>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="text-right">
        <button type="submit" class="btn btn-success rounded-pill">ログイン</button>
      </div>
    <% end %>
    
    <%= render "admin/shared/links" %>

    </div>
  </div>
</div>
