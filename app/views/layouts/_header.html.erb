<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/"><span>NAGANOCAKE</span></a>
      <% if customer_signed_in? %>
        ようこそ<%= current_customer.first_name+current_customer.last_name %>さん！
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li>
            <%= link_to public_customer_path(current_customer), class: 'nav-link text-light' do %>
              <p><i class="fas fa-home"></i> マイページ</p>
            <% end %>
          </li>
          <li>
            <%= link_to public_items_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-store"></i> 商品一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to public_cart_items_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-shopping-cart"></i> カート</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
              <p><i class="fas fa-sign-out-alt"></i> ログアウト</p>
            <% end %>
          </li>
          <li>
            <!--検索窓の姿のみ表示-->
            <div class="input-group">
              <input type="text" id="txt-search" class="form-control input-group-prepend" placeholder="キーワードを入力"></input>
              <span class="input-group-btn input-group-append">
                <submit type="submit" id="btn-search" class="btn btn-primary"><i class="fas fa-search"></i> 検索</submit>
              </span>
            </div>

          </li>

        <% elsif admin_signed_in? %>

          <li>
            <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dirk' %>
          </li>
          <li>
            <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dirk' %>
          </li>
          <li>
            <%= link_to "注文履歴一覧", admin_root_path, class: 'nav-link text-dirk'%>
          </li>
          <li>
            <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dirk'%>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dirk' %>
          </li>

        <% else %>
          <li>
            <%= link_to about_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-link"></i> アバウト</p>
            <% end %>
          </li>
          <li>
            <%= link_to public_items_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-store"></i> 商品一覧</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-user-plus"></i> 新規登録</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-sign-in-alt"></i> ログイン</p>
            <% end %>
          </li>
          <li>
            <%= link_to new_admin_session_path, class: 'nav-link text-light' do %>
              <p><i class="fas fa-lock"></i> 管理者ログイン</p>
            <% end %>
          </li>


        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>