<div class="container">
  <div class="row">
    <!--ジャンル一覧-->
    <div class="col-md-3">
      <%= render 'public/items/genres', genres: @genres %>
    </div>

    <div class ="col-md-9">
        <div class="card">
        <img src="assets/topcake.jpg", class="card-img">
          <div class="card-img-overlay">
            <p class = "text-dark", style = "font-size: 18px;">
            <strong >ようこそ、ながのCAKEへ</strong><br>
            このサイトは、ケーキ販売のECサイトになります。</br>
            会員でない方も商品の閲覧はできますが、</br>
            購入には会員登録が必要になります。</p>
          </div>
        </div>
      </div>
    </div>

      <div class="row">
        <div class="col-md-12">
          <h4 class="mb-3 pl-2"><span style="font-weight: bold">新着商品</span></h4>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 d-flex">
          <% @items.first(4).each do |item| %>
            <%= link_to "/public/items/#{item.id}",class:"text-secondary" do %>
              <div class="card mx-2" style="width: 250px; height:150;">
                <%= image_tag item.image, class:"card-img-top"%>
                <div class="card-body text-center">
                  <h4 class="card-title"></h4>
                  <p class="card-text"><%= item.name %>&yen;<%= item.price %></p>
                </div>
              </div>
            <% end %>
          <%end%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 mt-3 text-light">
          <%= link_to "全ての商品を見る＞", "/public/items"%>
        </div>
      </div>

</div>

