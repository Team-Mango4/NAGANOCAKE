<div class="container text-center">
  <div class="row">
    <div class="col-4">
      <!--ジャンル一覧-->
    <%= render 'public/items/genres', genres: @genres %>
    </div>
    <div class="col-8">
    <h1>ようこそ長野Cakeへ</h1> </div>
  </div>
</div>

  <div>
  <h4>新着商品欄</h4>
    <% @items.each do |item| %>
      <%= link_to "/public/items/#{item.id}" do %>
      <div class="col-md-4">
        <div class="card">
        <%= image_tag item.image, size: "250x200" ,class:"card-img-top"%>
        <div class="card-body text-center">
        <h4 class="card-title"></h4>
        <p class="card-text"><%= item.name %>&yen;<%= item.price.to_s(:delimited) %></p>
        </div>
        <% end %>
        </div>
      </div>
    <%end%>
    </div>

<div class="text-right">
  <%= link_to "全ての商品を見る＞", "/public/items"%>
</div>
