<div class="container text-center">
  <div class="row">


    <div class="col-md-3">
      <!--ジャンル検索-->
    <%= render 'public/items/genres', genres: @genres %>
    </div>


    <div classo="col-md-8 offset-md-1">
      <h1>
        商品一覧(全<%= Item.count %>)
      </h1>
      <table class="table d-flex flex-wrap">
        <% @items.each do |item| %>
        <tbody>
            <tr>
              <td>
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.image, size: "250x150" %>
              <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to public_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
            </tr>
          <tr>
            <td>&yen;<%= item.price %> </td>
          </tr>
        </tbody>
        <% end %>
          </div>
      </table>
    </div>


  </div>
</div>