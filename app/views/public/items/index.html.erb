<div class="container text-center">
  <div class="row">
    

    <div class="col-md-3">
      <!--ジャンル検索-->
    <%= render 'public/homes/genres', genres: @genres %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>商品一覧(全<%= Item.count %>)</h1>
      <table class="table d-flex flex-wrap">
        <% @items.each do |item| %>
          <%= link_to "/public/items/#{item.id}" do %>
           <div class="card" style="width: 18rem;">
           <%= image_tag item.image, size: "250x150" ,class:"card-img-top"%>
           <div class="card-body">
            <p class="card-text"><%= item.name %>&yen;<%= item.price %></p>
          </div>
          <% end %>
        <% end %>
          </div>
      </table>
    </div>


  </div>
</div>