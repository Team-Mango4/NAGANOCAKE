<div class="container">
  <div class="row">

    <div class="col-md-3">
      <!--ジャンル検索-->
    <%= render 'public/items/genres', genres: @genres %>
    </div>


    <div class="col-md-8 offset-md-1">

      <div class="row">
        <div class="col-md-4">
          <%= image_tag @item.image, size: "200x200" %>
        </div>

        <div class="col-md-6 offset-md-2">
          <h1><%= @item.name %></h1>
          <h2><%= @item.introduction %></h2>
          &yen;<%= @item.with_tax_price.to_s(:delimited) %><small class="text-muted">(税込)</small>
        </div>
      </div>


      <div class="text-right">
        <%= form_with model: @cart_item, url: '/public/cart_items', method: :post do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="col-md-3 offset-md-6">
            <%= f.select :amount, *[1..10] %>
          </div>
          <div classo="col-md-2 offset-md-1">
            <%= f.submit 'カートに入れる' %>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</div>