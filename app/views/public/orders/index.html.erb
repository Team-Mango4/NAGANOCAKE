<h1>注文履歴一覧</h1>


<% @orders.each do |order| %>
  <p>注文日</p>
  <span><%= order.created_at %></span>
  <p>配送先</p>
  <span>
    <%= order.post_code %><br>
    <%= order.ship_address %><br>
    <%= @order.name %>
  </span>
  <p>注文商品</p>
  <span><= @order.item_id ></span>
  <p>支払金額</p>
  <span><= @order.price ></span>
  <p>ステータス</p>
  <span><= @order.making_status ></span>
  <p>注文詳細</p>
  %= link_to "表示する", "/public/orders/#{@order_detail.id}" >
  <% end %>
