<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td class="align-middle"><%= order.created_at %></td>
            <td>
              〒<%= order.post_code %></br>
              <%= order.ship_address %></br>
              <%= order.name %>
            </td>
            <!--商品名がまだ入ってません -->
            <td>～商品名を入れる～</td>
            <td class="align-middle"><%= order.total_payment %></td>
            <td class="align-middle"><%= order.status %></td>
            <%#= link_to "表示する", "/public/orders/#{@order_detail.id}" %>
          </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
