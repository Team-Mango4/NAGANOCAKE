<%= form_with model: @order, url: '/public/orders/confirm', method: :post do |f| %>
  <h3>支払い方法</h3>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

  <h3>お届け先</h3>
<!--ご自身の住所-->
  <%= radio_button_tag("address_option", "0") %>
  <%= label_tag(:ship_address, "ご自身の住所") %><br>
  <%= current_customer.post_code%>
  <%= current_customer.address%>
  <%= current_customer.first_name + current_customer.last_name%>
  <br>
<!--登録済住所から選択-->
  <%= radio_button_tag("address_option", "1") %>
  <%= label_tag(:ship_address, "登録済住所から選択") %><br>
  <%= f.select :ship_id, options_from_collection_for_select(Ship.all, :id, :ship_display) %><br>
  <br>
<!--新しいお届け先-->
  <%= radio_button_tag("address_option", "2") %>
  <%= label_tag(:ship_address, "新しいお届け先") %><br>
  <%= f.label :post_code,"郵便番号（ハイフンなし）" %><br>
  <%= f.text_field :post_code %><br>
  <%= f.label :ship_address,"住所" %><br>
  <%= f.text_field :ship_address %><br>
  <%= f.label :name,"宛名" %><br>
  <%= f.text_field :name %><br>

  <%= f.submit '確認画面へ進む' %>
<% end %>
