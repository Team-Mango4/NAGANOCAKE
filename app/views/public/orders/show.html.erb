<h2>注文履歴詳細</h2>

<div class="container">


  <div class="row">

    <div class="col-md-6">
      <!--注文情報-->
      <table class="table">
        <thead>
          <h2>注文日</h2>
          <h2>配送先</h2>
          <h2>支払い方法</h2>
          <h2>ステータス</h2>
        </thead>

        <p><%= @order.created_at %></p>

        <span>
          <%= @order.post_code %><br>
          <%= @order.ship_address %><br>
          <%= @order.name %>
        </span>

        <p><%= @order.payment_method %></p>

        <p><%= @order.status %></p>
      </table>
    </div>

    <div class="col-md-3">
      <!--請求情報-->
      <h2>商品合計</h2>
      <p><%#= @order_detail.price %></p>
      <h2>配送料</h2>
      <p><%= @order.shipping_cost %></p>
      <h2>ご請求額</h2>
      <p><%= @order.total_payment %></p>
    </div>

  </div>


  <div class="row">
     <div class="col-md-6">
      <!--注文内容-->
      <h2>商品</h2>
      <p><%#= @order.order_details.item.name %></p>
      <h2>単価（税込）</h2>
      <p><%#= @order.order_details.price %></p>
      <h2>個数</h2>
      <p><%#= @order_details.amount %></p>
      <h2>小計</h2>
      <p><%#= @order_details.price %></p>
    </div>
  </div>


</div>