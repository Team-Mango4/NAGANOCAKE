<h2>注文履歴詳細</h2>

<div class="container">


  <div class="row">

    <!--注文情報-->
    <div class="col-md-6">
      <span style="font-weight: bold">注文情報</span>
      <table class="table table-bordered">
          <tr><th class="table-active">注文日</th><td><%= @order.created_at %></td></tr>
          <tr>
            <th class="table-active">配送先</th>
            <td>
              <%= @order.post_code %><br>
              <%= @order.ship_address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr><th class="table-active">支払い方法</th><td><%= @order.payment_method %></td></tr>
          <tr><th class="table-active">ステータス</th><td><%= @order.status %></td></tr>
      </table>
    </div>

    <!--請求情報-->
    <div class="col-md-3">
      <span style="font-weight: bold">請求内容</span>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">商品合計</th>
          <% @order_subtotol = @order.total_payment - @order.shipping_cost %>
          <td><%= @order_subtotol %></td>
        </tr>
        <tr>
          <th class="table-active">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-active">ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>

  </div>


  <div class="row">
    <!--注文内容-->
    <div class="col-md-6">
      <span style="font-weight: bold">注文内容</span>
      <table class="table table-bordered ">
        <thead>
          <tr>
            <th class="table-active">商品</th>
            <th class="table-active">単価（税込）</th>
            <th class="table-active">個数</th>
            <th class="table-active">小計</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <!--itemモデル記載の税込みを求めるためのメソッドを使用-->
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <!--order_detailモデル記載の小計を求めるためのメソッドを使用-->
            <td><%= order_detail.subtotal %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>


</div>