<h3>配送先登録/一覧</h3>
<!-- 新規登録 -->
<%= form_with model: @ship, url: '/public/ships', method: :post do |f| %>

  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :post_code %>

  <h4>住所</h4>
  <%= f.text_field :address %>

  <h4>宛名</h4>
  <%= f.text_field :name %>

  <%= f.submit '投稿' %>

<% end %>

一覧
<% @ships.each do |ship| %>

  <p>郵便番号</p>
  <span><%= ship.post_code %></span>
  <p>住所</p>
  <span><%= ship.address %></span>
  <p>宛名</p>
  <span><%= ship.name %></span>
  <%= link_to "編集する", edit_public_ship_path(ship.id) %>
  <%= link_to "削除", "/public/ships/#{ship.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>
