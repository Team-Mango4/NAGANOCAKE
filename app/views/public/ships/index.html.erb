<div class="h3 pb-2 mb-4 text-success border-bottom border-success">
    <h1>配送先登録/一覧</h1>
</div>
<div class='container'>
  <div class='row g-3'>
    <div class='col-md-6 offset-md-3'>
    <%= form_with model: @ship, url: '/public/ships', method: :post do |f| %>
     <div class="col-md-6">
     <strong>郵便番号(ハイフンなし)</strong>
      <%= f.text_field :post_code, class: 'form-control border-success' %>
      </div>
       <div class="col-md-12">
        <strong>住所</strong>
          <%= f.text_field :address, class: 'form-control border-success' %>
          </div>
         <div class="col-md-6">
           <strong>宛名</strong>
         <%= f.text_field :name, class: 'form-control border-success' %>
        </div>
        <div class="actions">
        <%= f.submit "新規登録" ,class: "btn btn-success" %>
       </div>

<% end %>

一覧
<% @ships.each do |ship| %>

  <p>郵便番号</p>
  <span><%= ship.post_code %></span>
  <p>住所</p>
  <span><%= ship.address %></span>
  <p>宛名</p>
  <span><%= ship.name %></span>
  <%= link_to "編集する", edit_public_ship_path(ship.id) %>
  <%= link_to "削除", "/public/ships/#{ship.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>
