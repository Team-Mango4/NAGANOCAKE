<div class="h3 pb-2 mb-4 text-success border-bottom border-success">
    <h1>配送先登録/一覧</h1>
</div>
<div class='container'>
  <div class='row g-3'>
    <div class='col-md-6 offset-md-3'>
    <%= form_with model: @ship, url: '/public/ships', method: :post do |f| %>
     <div class="col-md-6">
     <strong>郵便番号(ハイフンなし)</strong>
      <%= f.text_field :post_code, class: 'form-control border-success' %>
      </div>
       <div class="col-md-12">
        <strong>住所</strong>
          <%= f.text_field :address, class: 'form-control border-success' %>
          </div>
         <div class="col-md-6">
           <strong>宛名</strong>
         <%= f.text_field :name, class: 'form-control border-success' %>
        </div>
        <div class="d-md-flex justify-content-md-end">
        <%= f.submit "新規登録" ,class: "btn  btn-success" %>
       </div>
       <% end %>
 <table class="table table-bordered">

  <tr class="table-success">
   <th>郵便番号</th>
   <th>住所</th>
   <th>宛名</th>
   <th></th>
  </tr>

  <% @ships.each do |ship| %>

    <tr>
    <td><%= ship.post_code %></td>
    <td><%= ship.address %></td>
    <td><%= ship.name %></td>
    <td>
    <%= link_to "編集する", edit_public_ship_path(ship.id), class: "btn btn-sm btn-success" %>
    <%= link_to "削除する", "/public/ships/#{ship.id}", method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
    </td>
   </tr>
<% end %>
   </table>
   </div>
   </div>
   </div>
